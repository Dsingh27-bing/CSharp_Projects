@using Microsoft.AspNetCore.Mvc.TagHelpers
@model PageResultSet<Genre>



<div class="page-header">
    <h1>List of Genres</h1>
    
</div>
<a asp-action="Create" asp-controller="Genre">Add New Genre</a>

@if (Model.Items.Count() > 0)
{
    <table class="table table-bordered table-hover table-striped">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th colspan="3">Options</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td><a asp-action="Edit" asp-controller="Genre" asp-route-id="@item.Id">Edit</a></td>
                <td><a asp-action="Delete" asp-controller="Genre" asp-route-id="@item.Id">Delete</a></td>

            </tr>
        }
        </tbody>
    </table>
}

else
{
    <h1> No Records of Genre</h1>
}

<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
        
        @for (int i = 1; i <= @Model.PageCount; i++)
        {
            <li class="page-item"><a class="page-link" asp-action="Index" asp-controller="Genre" asp-route-pageNumber="@i">@i</a></li>
        }
       
    </ul>
 </nav >