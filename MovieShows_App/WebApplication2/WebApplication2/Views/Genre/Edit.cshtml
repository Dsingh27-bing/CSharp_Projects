@model Genre
<div class=" page-header">
    <h1> Edit Genre </h1>
</div>

<form method="post" class="container" asp-action="Edit" asp-controller="Genre">
    <div class="my-3">
        <label for="Name">Genre Name</label>
        <input type="text" name="Name" value="@Model.Name" class="form-control" value="@Model.Name"/>
    </div>
    <button class="btn btn-warning">Update</button>
</form>